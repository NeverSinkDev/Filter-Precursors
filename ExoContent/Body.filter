	{
		Show General { Empty(); }
	}

	Section Chromatic : Auto("Leveling->NormalMagic->RGB"), SocketGroup "RGB"
	{
		Show RGBSmall1	{ Width <=2; Height <=2; }
		Show RGBSmall2	{ Width <=1; Height <=4; }
		Show RGBLarge	{ Width >=2; Height >=4; AreaLevel <= leveling.keylevels.act3 }
		Show RGBMedium	{ Width >=2; Height = 3; }
	}

	Section ThreeLinkedGear : LinkedSockets >= 3, Auto("Leveling->NormalMagic->3L")
	{
		Show General { AreaLevel <= leveling.keylevels.threelink; }
	}

#!! Override 920 : "Act 1-3 specific gear"

	Section Act1 : AreaLevel <= leveling.keylevels.act1, Auto("Leveling->NormalMagic->act1")
	{
		Show CasterCraftRings { BaseType leveling.bases.act1.craftrings; }
		Show General { BaseType leveling.bases.act1.general; }
		Show Boots { Class "Boots"; }
		Show Caster { Class leveling.classes.caster - "Staves" }
		Show Quivers { Class "Quivers" }
		Show Physical { BaseType "Rustic Sash" "Iron Ring"; }
	}
	
	Section Act2 : AreaLevel >= leveling.keylevels.act1, AreaLevel <= leveling.keylevels.act2, Auto("Leveling->NormalMagic->act2")
	{
		Show CasterCraftRings { BaseType leveling.bases.act1.craftrings; }
		Show Boots { Class "Boots"; }
		Show Physical { BaseType "Rustic Sash"; }
	}

	Section LaterActs : Auto("Leveling->NormalMagic->otheracts")
	{
		Show HighPhysQuivers { BaseType leveling.bases.quivers.best; AreaLevel >= leveling.keylevels.act2; AreaLevel <= leveling.keylevels.act4 }
		Show FireResistGear { BaseType "Ruby Ring"; AreaLevel >= leveling.keylevels.act2; AreaLevel <= leveling.keylevels.act6 }
		Show GeneralCrafting { AreaLevel >= leveling.keylevels.act3; BaseType leveling.bases.generalcrafting; }
	}
}

