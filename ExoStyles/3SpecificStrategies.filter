#------------------------------------
# Tiering Marking Strat
#------------------------------------

Style LowerValueTiering
{
	var icon = "Diamond";
	var acc = 255 0 0 255;
	var extra = 0 0 0 255;

	Func LT1()
	{
		Colors(acc, acc, extra);
		LVHL1();
	}

	Func LT2()
	{
		SetBorderColor acc;
		SetBackgroundColor extra;
		LVHL2();
	}

	Func LT3()
	{
		SetBorderColor acc;
		LVHL3();
	}
}


