Style ThreeXTierList : UniversalTierlist
{
	Func T3 () 
	{ 
		SetFontSize 45;
		SetTextColor tier.t3.base; SetBorderColor tier.t3.base; SetBackgroundColor tier.t3.acc; 
		PlayAlertSound tier.t3.sound; PlayEffect tier.t3.cray; MinimapIcon tier.t3.iconsize tier.t3.cmap icon; 
	}

	Func Multi()
	{
		SetFontSize 45;
		SetTextColor tier.special.acc; SetBorderColor exoticgear.tx; SetBackgroundColor tier.special.base; 
		PlayAlertSound tier.special.sound; PlayEffect exoticgear.cray MinimapIcon tier.t3.iconsize exoticgear.cmap icon; 
	}
}

