#------------------------------------
# Applications - PRE-RARE
#------------------------------------

Style Global
{
	Apply(ALL => UniversalPreProc.ApplyToAll);
}

Style LibrarySectionBased
{
	# General
	Apply(HideLayer* => !UniversalHideLayer.any);

	# PRERARES

	Apply(6Links.arm => SixLinkVariant.t1);
	Apply(6Links.wep => SixLinkVariant.t2);

	Apply(Influenced.t1* => InfluencedVariant.t1);
	Apply(Influenced.t2* => InfluencedVariant.t2);

	Apply(exoticbases => !UniversalExotic.t1);
	Apply(IdModSection => !IdModsMulti.t2);

	Apply(ArtefactItemClasses => !Artefact.t1);

	Apply(Invitations => InvitationTierList);
	Apply(AdditionalCrafting.any => CraftGeneralStrategy.ANY);

	# RARES

	Apply(BreachRings => !RaresJewellery.t3);

	Apply(Talismans.T1* => !UniversalExotic.t1);
	Apply(Talismans.T2* => !UniversalExotic.t2);
	Apply(Talismans.T3* => !UniversalExotic.t3);
	Apply(Talismans.Any => !RaresJewellery.t3);

	Apply(EndgameRareRingsAmulets => RaresJewellery);
	Apply(EndgameRareBelts => RaresJewellery);
	Apply(EndgameRareGear.t1* => RaresArmoursWeapons.t1);
	Apply(EndgameRareGear.t2* => RaresArmoursWeapons.t2);
	Apply(EndgameRareGear.t3* => RaresArmoursWeapons.t3);
	Apply(EndgameRareGear.t4* => RaresArmoursWeapons.t4);

	Apply(HeistFollowerGear => HeistFollowerGearStrategy);

	# Tierlists
	Apply(Replicas => ReplicaTierList);
	Apply(UniqueMaps => UniqueMapStrat);

	# Maps and MapLike
	Apply(Maps.deco_mapup* => !GeneralMapProgressionStrategy.deco_mapup);
	Apply(Labyrinth => ExoticFragments);

	Apply(HeistUniqueMapLike => !UniqueMapStrat.T2);

	Apply(HeistContracts => !HeistMapLike.Any);
	Apply(HeistBlueprint => !HeistMapLikeHigh.Any);

	Apply(MapFragments => FragmentTierStrat);
	Apply(MapFragments.T1p => FragmentExceptions.Any);
}

Style LibraryTagBased
{
	Apply(*.restex => !UniversalValueAccents.restex);

	## Pre-Rare
	Apply($jewels => JewelStrategy);
	Apply($exotic => UniversalExotic);
	Apply($recipe => RecipeStrategy);

	Apply($craftspecial => CraftSpecialStrategy);
	Apply($craftgeneral => CraftGeneralStrategy);
	Apply($utilflasks => UtilityFlasks);

	## Rare
	Apply($raredeco => EndgameRareDecorators)

	## Gems
	Apply($Gems => GemStrategy);

	Apply($Maps.HighHarbingerMap => UniqueMapStrat.t1);
	Apply($Maps => GeneralMapProgressionStrategy);

	# Currency
	Apply($currency.t1exalted => t1exalted.Any);
	Apply($currency.t2divine => t2divine.Any);
	Apply($currency.t3annul => t3annul.Any);
	Apply($currency.t4chaos => t4chaos.Any);
	Apply($currency.t5alchemy => t5alchemy.Any);
	Apply($currency.t6chrom => t6chrom.Any);
	Apply($currency.t7chance => t7chance.Any);
	Apply($currency.t8trans => t8trans.Any);
	Apply($currency.t9armour => t9armour.Any);
	Apply($currency.tportal => tportal.Any);
	Apply($currency.twisdom => twisdom.Any);

	Apply($currency.eqChaos => t4chaos.Any);
	Apply($currency.eqAlchemy => t5alchemy.Any);
	Apply($currency.eqAnnul => t3annul.Any);
}

Style LibraryGlobal
{
	Apply(ALL => UniversalValueAccents);
}