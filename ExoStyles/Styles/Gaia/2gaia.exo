## FRAGMENTS USE THE SAME SCHEME AS CURRENCY/DIVIS
Expand FragmentTierStrat
{
    Func T1()
    {
        SetTextColor 255 0 0 255;
        SetBorderColor 255 0 0 255;
    }

    Func T2()
    {
        SetBackgroundColor highcurrency2;
    }

    Func T3()
    {
        SetBackgroundColor highcurrency1;
    }

    Func T4()
    {
        SetTextColor sBlack;
        SetBackgroundColor midvaluecurrency
        SetBorderColor sBlack;
    }

    Func T5()
    {
        SetTextColor lowvaluecurrency;
    }
}

