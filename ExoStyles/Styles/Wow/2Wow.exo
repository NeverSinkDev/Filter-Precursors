Style BasicPattern
{
    var acc = sWhite;
    var base = sBlack;
    var border = sWhite;
    var beamc = White;
    var soundc = 2;
    var mapc = White;
    var icon = Kite;
    var fs = 32;

    Func High()
    {
        SetFontSize fs;
        SetTextColor acc;
        SetBorderColor acc;
        SetBackgroundColor base;
        MM 0 mapc icon;
        Sound soundc 300;
        Beam beamc;
    }

    Func Low()
    {
        SetFontSize fs;
        SetTextColor acc;
        SetBorderColor sBlack;
        SetBackgroundColor base;
        MM 0 mapc icon;
        Sound soundc 300;
        Beam beamc;
    }
}

