#------------------------------------
# Common Functions
#------------------------------------

Func Colors(a,b,c)
{
    SetTextColor a;
    SetBorderColor b;
    SetBackgroundColor c;
}

Func RemoveEffects()
{
    PlayAlertSound NONE; MM NONE; PlayEffect NONE;
}

Func LVHL1()
{
    SetFontSize font.t4; PlayAlertSound sounds.unique; PlayEffect Grey; MinimapIcon 2 Grey icon;
}

Func LVHL2()
{
    SetFontSize font.t5; PlayEffect Grey Temp;
}

Func LVHL3()
{
    SetFontSize font.t5;
}


