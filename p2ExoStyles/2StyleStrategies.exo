# Global strategies can be applied to any section
# Even if they miss the parent tag

Style UniversalHideLayer
{
	Func Any ()
	{
		SetBorderColor 0 0 0 0;
		SetBackgroundColor 0 0 0 0;
		MinimapIcon NONE;
		PlayEffect NONE;
		PlayAlertSound NONE;
		SetFontSize font.min;
		DisableDropSound True;
	}
}

