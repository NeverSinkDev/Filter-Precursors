# These are global accents that can be used without any context

Style UniversalValueAccents
{
	Func tierS
	{
		SetTextColor cRed; SetBorderColor cRed; SetBackgroundColor cWhite; 
		PlayAlertSound asS; PlayEffect Red; MinimapIcon 0 Red Star; 
		SetFontSize 45;
	}

	Func QuestLike
	{
		SetTextColor cQuestGreen;
		PlayEffect Green;
		SetFontSize font.t2;
		MinimapIcon 0 Green Pentagon;
		PlayAlertSound asUnique;
	}

	Func Artifact
	{
		SetFontSize font.t2;
		SetTextColor cArtifact; SetBorderColor cArtifact; SetBackgroundColor cArtifactGlow;
		PlayAlertSound asUnique; PlayEffect Orange; MinimapIcon 0 Orange Pentagon;
	}

#------------------------------------
# CURRENCY
#------------------------------------

	## Greater jeweller
	Func CurrTierA
	{
		SetFontSize font.t2;
		SetTextColor cWhite; SetBorderColor cWhite; SetBackgroundColor cCurrTierA;
		PlayAlertSound asA; PlayEffect Red; MinimapIcon 0 Red mCurrency;
	}

	## Above Exalted Tier
	Func CurrTierB
	{
		SetFontSize font.t2;
		SetTextColor cBlack; SetBorderColor cBlack; SetBackgroundColor cCurrTierB;
		PlayAlertSound asCurr; PlayEffect Yellow; MinimapIcon 1 Yellow mCurrency;
	}

	## Exalted
	Func CurrTierC
	{
		SetFontSize font.t3;
		SetTextColor cBlack; SetBorderColor cBlack; SetBackgroundColor cCurrTierC;
		PlayAlertSound asCurr; PlayEffect White; MinimapIcon 1 Yellow mCurrency;
	}

	## Below Exalted Tier
	Func CurrTierD
	{
		SetFontSize font.t4;
		SetTextColor cBlack; SetBorderColor cBlack; SetBackgroundColor cCurrTierD;
		PlayAlertSound asCurr; PlayEffect White; MinimapIcon 2 White mCurrency;
	}

